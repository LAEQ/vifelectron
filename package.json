{
  "name": "vifelectron",
  "productName": "Vifeco with electron Boilerplate",
  "description": "Vifeco the way it should be",
  "version": "0.0.0",
  "private": false,
  "author": "David Maignan <davidmaignan@gmail.com>",
  "copyright": "Â© 2020, INRS / LAEQ.",
  "homepage": "http://github.com/LAEQ/vifelectron",
  "main": "app/background.js",
  "build": {
    "appId": "org.laeq.vifelectron",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "autoprefixer": "^9.8.0",
    "bootstrap": "^4.5.0",
    "bootstrap-slider": "^10.6.2",
    "collectionjs": "^0.3.4",
    "d3-timer": "^1.0.10",
    "datatables": "^1.10.18",
    "exports-loader": "^0.7.0",
    "ffbinaries": "^1.1.4",
    "file-loader": "^6.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-jetpack": "^2.1.0",
    "jquery": "^3.5.1",
    "js-ffmpeg": "^0.0.26",
    "moment": "^2.26.0",
    "node-sass": "^4.14.1",
    "popper.js": "^1.16.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "simple-thumbnail": "^1.6.5",
    "svg-inline-loader": "^0.8.2",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.0",
    "css-loader": "^3.5.3",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-mocha": "^8.1.1",
    "electron-reload": "^1.5.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^7.1.1",
    "source-map-support": "^0.5.6",
    "spectron": "^10.0.1",
    "style-loader": "^1.2.1",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
